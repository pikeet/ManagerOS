<UserControl
    x:Class="OSManager.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OSManager.MainView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:MainControlViewModel />
    </UserControl.DataContext>

    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Padding="10"
                Background="#FF77A9FA"
                CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Opacity="0.35"
                        RenderingBias="Quality"
                        ShadowDepth="1" />
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Viewbox
                        Grid.Row="0"
                        Grid.Column="1"
                        StretchDirection="DownOnly">
                        <TextBlock
                            FontFamily="Segoe UI Semibold"
                            FontSize="15"
                            Foreground="White"
                            Text="{Binding Path=Versions}" />
                    </Viewbox>

                    <Viewbox
                        Grid.Row="0"
                        Grid.Column="3"
                        StretchDirection="DownOnly">
                        <TextBlock
                            FontFamily="Segoe UI Semibold"
                            FontSize="15"
                            Foreground="White"
                            Text="{Binding Path=VersionsOS}"
                             />
                    </Viewbox>

                    <Grid
                        Grid.Row="1"
                        Grid.ColumnSpan="5"
                        Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="{Binding Path=Processor}"
                            Style="{StaticResource CardButton}"
                            Tag="Процессор"
                            ToolTip="{Binding Path=Processor}" />
                        <Label
                            Grid.Column="2"
                            Content="{Binding Path=Motherboard}"
                            Style="{StaticResource CardButton}"
                            Tag="Мат. плата"
                            ToolTip="{Binding Path=Motherboard}" />
                        <Label
                            Grid.Column="4"
                            Content="{Binding Path=Video}"
                            Style="{StaticResource CardButton}"
                            Tag="Графика"
                            ToolTip="{Binding Path=Video}" />
                        <Label
                            Grid.Column="6"
                            Content="{Binding Path=OZY}"
                            Style="{StaticResource CardButton}"
                            Tag="ОЗУ"
                            ToolTip="{Binding Path=OZY}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

